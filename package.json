{
  "name": "@yikoyu/unconfig",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.25.0",
  "description": "yikoyu's config",
  "author": "yikoyu<2282373181@qq.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yikoyu/unconfig.git"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  },
  "scripts": {
    "dev": "turbo dev",
    "build:all": "turbo build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean:cache": "rimraf -g **/{.turbo,dist}",
    "clean:all": "rimraf -g **/{.turbo,dist,node_modules} & pnpm install",
    "commit": "czg",
    "version-packages": "pnpm changeset version",
    "prepare": "simple-git-hooks"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.6.1",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.0.1",
    "@yikoyu/commitlint-config": "workspace:*",
    "@yikoyu/semantic-release-config": "workspace:^",
    "eslint": "^9.39.1",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.2",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.17.3",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit $1"
  },
  "lint-staged": {
    "*": [
      "eslint --fix"
    ]
  }
}
